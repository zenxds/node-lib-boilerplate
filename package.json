{
  "name": "node-lib-boilerplate",
  "version": "0.1.0",
  "description": "node lib boilerplate",
  "main": "lib/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "compile": "tsc",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier src/**/*.ts --write",
    "test": "jest ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "yarn lint",
      "yarn test",
      "yarn prettier",
      "yarn compile",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "preset": "ts-jest"
  },
  "author": "zenxds",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/repo.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^4.3.0",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "typescript": "^3.4.5"
  }
}
